<a href="/dashboard">&larr; Back</a>
<div class="admin-title">
    <h2>View ? Edit Post</h2>

    <form action="/delete-post/<%= data._id %>?_method=DELETE" method="POST">
        <input type="submit" value="Delete" class="btn-delete btn">
    </form>
</div>


<form action="/edit-post/<%= data._id %>?_method=PUT" method="POST">
    <label for="title">Title</label>
    <input type="text" id="title" placeholder="Post Title" name="title" value="<%= data.title %>" required>

    <label for="content">Content</label>
    <textarea id="content" cols="50" rows="10" name="content"  required><%= data.content %></textarea>

    <input type="submit" value="Update" class="btn">
</form>